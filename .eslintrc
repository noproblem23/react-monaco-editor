{
  "extends": "eslint-config-rackt",
  "rules": {
    "array-bracket-spacing": 0,
    "comma-dangle": 0,
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "semi": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2
  },
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "globals": {
    "monaco": true
  }
}
